@using Library_Management_System.ViewModels.UserViewModels
@model SingnUpVuewModel
<h1>Login Page</h1>
<div class="row">
    <div class="col-md-3" style="background-color:transparent"></div>
    <div class="col-md-6">
        <form method="post" asp-controller="User" asp-action="SignUp">
            <div asp-validation-summary="ModelOnly">

            </div>
            <div>
                <label class="form-label" asp-for="userName"></label>
                <input type="text" asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label" asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label" asp-for="password"></label>
                <input type="password" asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label" asp-for="qualifaction"></label>
                <input type="text" asp-for="qualifaction" class="form-control" />
                <span asp-validation-for="qualifaction" class="text-danger"></span>
            </div>
            <div>
                <label class="form-label" asp-for="personalImagePath"></label>
                <input type="file" asp-for="personalImagePath" class="form-control" />
                <span asp-validation-for="personalImagePath" class="text-danger"></span>
            </div>
            <input type="submit"  value="Sign Up" class="btn btn-primary mt-4" />
        </form>
    </div>
    <div class="col-md-3" style="background-color:transparent"></div>

</div>

